{% extends 'base.html.twig' %}

{% block title %}Créer un compte
{% endblock %}

{% block body %}
<div id="formulaire_inscription">
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	{# {% form_theme form 'bootstrap_4_layout.html.twig' %}
 #}

	

	{{ form_start(registrationForm, {'attr': {
			'class': 'form-signin'
		}}) }}

		<h1 class="h3 mb-3 font-weight-normal">Créer un compte</h1>
	{{ form_row(registrationForm.email_utilisateur, {
            'label': 'E-mail',
			'attr': {
			'class': 'form-control',
			'style': 'background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;'
		}

        }) }}

	{{ form_row(registrationForm.plainPassword, {
            'label': 'Mot de passe',
			'attr': {
			'class': 'form-control',
			'style': 'background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;'
		}
        }) }}

	{{ form_row(registrationForm.agreeTerms, {
            'label': "J'accepte les termes "}) }}

	<button type="submit" class="btn btn-lg btn-primary btn-block">S'enregister</button>
	
	{{ form_end(registrationForm) }}
</div>	
{% endblock %}
